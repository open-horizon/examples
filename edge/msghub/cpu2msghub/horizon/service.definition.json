{
    "org": "$HZN_ORG_ID",
    "label": "$SERVICE_NAME for $ARCH",
    "description": "Sample Horizon service that repeatedly reads the CPU load and GPS location, and sends it to IBM Message Hub",
    "public": true,
    "documentation": "https://console.test.cloud.ibm.com/docs/services/edge-fabric/poc/$SERVICE_NAME.html",
    "url": "$SERVICE_URL",
    "version": "$SERVICE_VERSION",
    "arch": "$ARCH",
    "sharable": "multiple",
    "requiredServices": [
        {
            "url": "github.com.open-horizon.examples.cpu",
            "org": "IBM",
            "version": "[0.0.0,INFINITY)",
            "arch": "$ARCH"
        },
        {
            "url": "github.com.open-horizon.examples.gps",
            "org": "IBM",
            "version": "[0.0.0,INFINITY)",
            "arch": "$ARCH"
        }
    ],
    "userInput": [
        {
            "name": "MSGHUB_API_KEY",
            "label": "The API key to use when sending message to your instance of IBM Event Streams",
            "type": "string",
            "defaultValue": ""
        },
        {
            "name": "MSGHUB_BROKER_URL",
            "label": "The Event Streams broker URL",
            "type": "string",
            "defaultValue": ""
        },
        {
            "name": "SAMPLE_SIZE",
            "label": "the number of samples to read before calculating the average",
            "type": "int",
            "defaultValue": "6"
        },
        {
            "name": "SAMPLE_INTERVAL",
            "label": "the number of seconds between samples",
            "type": "int",
            "defaultValue": "5"
        },
        {
            "name": "MOCK",
            "label": "mock the CPU sampling",
            "type": "boolean",
            "defaultValue": "false"
        },
        {
            "name": "PUBLISH",
            "label": "publish the CPU samples to IBM Message Hub",
            "type": "boolean",
            "defaultValue": "true"
        },
        {
            "name": "VERBOSE",
            "label": "log everything that happens",
            "type": "string",
            "defaultValue": "0"
        }
    ],
    "deployment": {
        "services": {
            "$SERVICE_NAME": {
                "image": "$DOCKER_IMAGE"
            }
        }
    }
}